        <a class="navbar-item" href="/">
            <p class="title">Gekita</p>
        </a>
        <div class="navbar-item" style="width: 80%">
            <div id="gekiTitle">
                <input v-model="message" class="input" type="text" placeholder="タイトル">
            </div>
